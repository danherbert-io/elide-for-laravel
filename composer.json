{
  "name": "danherbert-io/elide-for-laravel",
  "description": "HTMX utils to streamline and build... inertia... for your HTMX powered site.",
  "keywords": [
    "laravel",
    "htmx"
  ],
  "autoload": {
    "psr-4": {
      "Tests\\": "tests/",
      "Elide\\": "src"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Elide\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dan Herbert",
      "email": "dan@danherbert.io"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "laravel/framework": "^11.0|^12.0",
    "symfony/console": "^6.2|^7.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.2|^10.0",
    "mockery/mockery": "^1.3.3",
    "phpunit/phpunit": "^10.4|^11.5",
    "laravel/pint": "^1.23"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Elide\\Providers\\ElideServiceProvider"
      ],
      "aliases": {
        "Htmx": "Elide\\Htmx"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-autoload-dump": "@prepare",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "pint" : "@php vendor/bin/pint",
    "test": "@php vendor/bin/phpunit",
    "facade": "@php vendor/bin/facade.php -- Elide\\\\Htmx"
  }
}
